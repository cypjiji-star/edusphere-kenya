
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow creating the first developer account only if the collection is empty.
    // This provides a secure way to bootstrap the first super-admin user.
    match /developers/{developerId} {
      allow create: if !exists(/databases/$(database)/documents/developers);
    }

    // Default deny all other reads and writes to the database.
    // You should expand these rules as your application grows.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
